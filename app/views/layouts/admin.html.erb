<!DOCTYPE html>
<html>
  <head>
    <title>Perfilamiento</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src='http://cdnjs.cloudflare.com/ajax/libs/bootstrap-validator/0.4.5/js/bootstrapvalidator.min.js'></script>
   
  </head>

  <body >

    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Auditor√≠a UPC</a>
        </div>
        <div class="collapse navbar-collapse" id="myNavbar">
          <ul class="nav navbar-nav">
            <li><a href="<%= home_url%>">Inicio</a></li>
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#">Administrador <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><a href="<%= tdocindex_url%>">Tipos de Documento</a></li>
                <li><a href="<%= tusuindex_url%>">Tipos de Usuario</a></li>
                <li><a href="<%= crudindex_url%>">Tipos de Log</a></li>
              </ul>
            </li>
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#">Personas <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><a href="<%= tercindex_url%>">Registro de Personas</a></li>
              </ul>
            </li>

          </ul>
          <div class="col-sm-6 col-md-6">
            <form class="navbar-form" role="search">
              <%= form_tag("#{home_url}", id: :form, method: :get) do %>
                <div class="input-group">
                  <div class="input-group-btn" >
                          <button type="button" class="btn btn-search btn-default dropdown-toggle" data-toggle="dropdown" >
                              <span class="glyphicon glyphicon-user"></span>
                              <span class="label-icon">Busca Persona</span>
                              <span class="caret"></span>
                          </button>
                          <ul class="dropdown-menu pull-left" role="menu">
                             <li>
                                  <a onclick="cambiar('persona')">
                                      <span class="glyphicon glyphicon-user"></span>
                                      <span class="label-icon">Buscar Persona</span>
                                  </a>
                              </li>
                              <li>
                                  <a onclick="cambiar('registro')">
                                  <span class="fa fa-newspaper-o"></span>
                                  <span class="label-icon">Buscar Registros</span>
                                  </a>
                              </li>

                          </ul>
                      </div>

                    <input type="text" class="form-control" placeholder="Buscar" name="search" id="search">
                    <div class="input-group-btn">
                        <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                    </div>
                    <select class="" name="per" id="env" style="display: none;">
                      <option value="persona">Persona</option>
                      <option value="registro">Registros</option>
                    </select>
                </div>
              <% end %>
            </form>
          </div>
          <ul class="nav navbar-nav navbar-right">
            <li><a><span class="glyphicon glyphicon-user"></span> <%= session[:user]%></a></li>
            <li><a href="<%= logout_url%>"><span class="glyphicon glyphicon-log-in"></span> Salir</a></li>
          </ul>
        </div>
      </div>
    </nav>
    <div class="container">
        <%= yield %>
    </div>
  </body>
</html>
