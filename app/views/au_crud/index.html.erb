<div class="row">
  <div class="panel panel-default">
    <div class="panel-heading">Formulario de Registro</div>
    <div class="panel-body">
      <div class="responses">
        <% flash.each do |key, value| %>
          <div class="alert alert-<%= key%>">
            <%= simple_format value%>
          </div>
        <% end %>
      </div>
      <%= form_tag("#{crudsave_url}", id: :form , :class => "form-horizontal form-label-left") do %>
        <%= hidden_field_tag "cru_cont"%>
        <div class="form-group">
          <%= label_tag 'cru_desc', 'Descripción', :class => "control-label col-md-4 col-sm-4 col-xs-12"%>
          <div class="col-md-3 col-sm-3 col-xs-12">
            <%= text_field_tag "cru_desc", nil,:class => "form-control"%>
          </div>
        </div>

        <div class="ln_solid"></div>
        <center>
          <%= submit_tag "Guardar", id: :guardar, :class => "btn btn-success"%>
          <%= button_tag "Limpiar", type: :reset, :class => "btn btn-danger"%>
        </center>
      <% end %>
    </div>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">Registros en sistema</div>
    <div class="panel-body">
      <table class="table datatable">
        <thead>
          <tr>
            <th>Nº</th>
            <th>Descripción</th>
            <th>Opciones</th>
          </tr>
        </thead>
        <tbody>
          <% @t_result.each do |row|%>
          <tr>
            <td><%= row.cru_cont%></td>
            <td><%= row.cru_desc.titleize%></td>
            <td>
              <% if row.cru_cont > 2%>
                <a onclick="mostrar(<%=row.cru_cont%>)" class="btn btn-xs btn-default"><i class="fa fa-search"></i> Ver/Modificar</a>
                <a onclick="borrar(<%=row.cru_cont%>)" class="btn btn-xs btn-danger mostrar"><i class="fa fa-trash"></i> Borrar</a>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <script>
  window._token = "<%= form_authenticity_token %>";
function mostrar(id) {
  if (id > 2) {
    $.ajax({
      url: "<%= crudshow_url%>",
      type: "POST",
      contextType: "json",
      data: {authenticity_token: window._token,
              form: {
                id: id
              }
            },
      success: function(data, textStatus, jqXHR){
        if (data != null) {
          $("#cru_desc").val(data["cru_desc"]);
          $("#cru_cont").val(data["cru_cont"]);

        }else{
          $(".responses").html("<div class='alert alert-danger'>No se Encontró el registro</div>");
        }
      },
      error: function(data, textStatus, jqXHR){
        console.log(jqXHR);
      }
    });
  }
  else{
    $(".responses").html("<div class='alert alert-danger'>No se permite editar este registro</div>");

  }

}

function borrar(id) {
  if (id > 2) {
    $.ajax({
      url: "<%= cruddelete_url%>",
      type: "POST",
      contextType: "json",
      data: {authenticity_token: window._token,
              form: {
                id: id
              }
            },
      success: function(data, textStatus, jqXHR){
        if (data != null) {
          if (data["tipo"] == "success") {

          }
          $(".responses").html("<div class='alert alert-"+data["tipo"]+"'>"+data["mensaje"]+"</div>")

        }else{
          $(".responses").html("<div class='alert alert-danger'> Error, intente más tarde</div>")

        }
        console.log(data);
      },
      error: function(data, textStatus, jqXHR){
        console.log(jqXHR);
      }
    });
  }
  else{
    $(".response").html("<div class='alert alert-danger'>No se permite eliminar este registro</div>");

  }


}

$(".mostrar").on('click', function(event) {
    $(this).parent().parent().remove();
});

$("#form").bootstrapValidator({
  feedbackIcons: {
    valid: 'glyphicon glyphicon-ok',
    invalid: 'glyphicon glyphicon-remove',
    validating: 'glyphicon glyphicon-refresh'

  },
  fields: {
    cru_desc:{
      validators:{
        stringLength: {
          min: 3,
          message: 'Cantidad mínima de caracteres 3'
        },
        notEmpty:{
          message: 'Ingrese una descripción'
        },
        remote: {
          url: '<%= crudcheck_desc_url%>',
          data: function(validator) {
                     return {
                        authenticity_token: window._token,
                        form: {
                         val: $('#cru_desc').val(),
                         id: $('#cru_cont').val()
                       }
                     };
                  },
          type: 'POST',
          message: 'Descripción no disponible'
        }
      }
    }

  }
})
