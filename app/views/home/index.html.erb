<div class="row">

  <div class="container">
    <div class="row">
          <div class="col-md-6 col-md-offset-3">
          <center><h2>BÃºsqueda de Prueba</h2></center>
              <div id="custom-search-input">
                <%= form_tag("#{home_url}", id: :form, method: :get) do %>
                  <div class="input-group">
                    <div class="input-group-btn">
                            <button type="button" class="btn btn-search btn-default dropdown-toggle" data-toggle="dropdown">
                                <span class="glyphicon glyphicon-search"></span>
                                <span class="label-icon">Busca en Todo</span>
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu pull-left" role="menu">
                               <li>
                                    <a onclick="cambiar('principal')">
                                        <span class="glyphicon glyphicon-search"></span>
                                        <span class="label-icon">Buscar Personas</span>
                                    </a>
                                </li>
                                <li>
                                    <a onclick="cambiar('articulo')">
                                    <span class="fa fa-newspaper-o"></span>
                                    <span class="label-icon">Buscar Registros</span>
                                    </a>
                                </li>

                            </ul>
                        </div>
                      <input type="text" class="form-control input-lg" id="search" name="search" placeholder="Buscar" style="box-shadow: 0 19px 38px rgba(0,0,0,0.30), 0 15px 12px rgba(0,0,0,0.22);"/>
                      <span class="input-group-btn">
                          <button class="btn btn-default btn-lg" type="submit" style="box-shadow: 0 19px 38px rgba(0,0,0,0.30), 0 15px 12px rgba(0,0,0,0.22);">
                              <i class="glyphicon glyphicon-search"></i>
                          </button>
                      </span>
                    <% end %>
                  </div>
              </div>
          </div>
    </div>


  </div>
</div>
<% if @array%>
<div id="login-overlay" class="modal-dialog">
  <div class="modal-content">
      <div class="modal-header">

          <h4 class="modal-title" id="myModalLabel">Resultado de tu busqueda</h4>
      </div>
      <div class="modal-body">
          <div class="row">
            <div class="form-horizontal form-label-left">
              <% @array.each do |row|%>
                <div class="form-group">
                  <label class="control-label col-md-4 col-sm-4 col-xs-12"> <%= row[0]%></label>
                  <p class="form-control-static"><%=raw row[1]%></p>
                </div>
              <% end %>
            </div>


          </div>
      </div>
      <div class="modal-footer">
        <center>
          <button type="button" name="button" class="btn btn-default" onclick="$('#login-overlay').hide();">Cerrar</button>

        </center>
      </div>
  </div>
</div>
<% end %>

<% if @arrayl%>
  <% @arrayl.each do |sup|%>
    <div id="login-overlay" class="modal-dialog">
      <div class="modal-content">
          <div class="modal-header">

              <h4 class="modal-title" id="myModalLabel">Resultado de tu busqueda</h4>
          </div>
          <div class="modal-body">
              <div class="row">
                <div class="form-horizontal form-label-left">
                  <% sup.each do |row|%>
                    <div class="form-group">
                      <label class="control-label col-md-4 col-sm-4 col-xs-12"> <%= row[0]%></label>
                      <p class="form-control-static"><%=raw row[1]%></p>
                    </div>
                  <% end %>
                </div>


              </div>
          </div>
          <div class="modal-footer">
            <center>
              <button type="button" name="button" class="btn btn-default" onclick="$('#login-overlay').hide();">Cerrar</button>

            </center>
          </div>
      </div>
    </div>
  <% end %>
<% end %>
